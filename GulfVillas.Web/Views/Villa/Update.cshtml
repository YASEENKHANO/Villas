@model Villa


<div class="w-100 card border-0 p-4">

	<div class="card-header bg-success bg-gradient ml-0 py-3  ">

		<div class="row">

			<div class="col-12 text-center">
				<h2 class="text-white py-2">Update Villa</h2>
			</div>
		</div>
	</div>

    <div class="card-body border p-4">
        <form asp-controller="Villa" asp-action="Update" method="post" enctype="multipart/form-data" class="row">
            <input asp-for="@Model.Id" hidden class="form-control border shadow" />

            <div class="row w-100">
                <!-- Left side: Input Fields -->
                <div class="col-9">
                    <div class="p-3">
                        <div class="form-floating col-10 py-2">
                            <input asp-for="@Model.Name" class="form-control border shadow" />
                            <label asp-for="@Model.Name" class="m-2"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating col-10 py-2">
                            <input asp-for="@Model.Description" class="form-control border shadow" />
                            <label asp-for="@Model.Description" class="m-2"></label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating col-10 py-2">
                            <input asp-for="@Model.Price" class="form-control border shadow" />
                            <label asp-for="@Model.Price" class="m-2"></label>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-floating col-10 py-2">
                            <input asp-for="@Model.Sqft" class="form-control border shadow" />
                            <label asp-for="@Model.Sqft" class="m-2"></label>
                            <span asp-validation-for="Sqft" class="text-danger"></span>
                        </div>

                        <div class="form-floating col-10 py-2">
                            <input asp-for="@Model.Occupancy" class="form-control border shadow" />
                            <label asp-for="@Model.Occupancy" class="m-2"></label>
                            <span asp-validation-for="Occupancy" class="text-danger"></span>
                        </div>

                        <div class="form-floating col-10 py-2">
							@* <input asp-for="@Model.Image"  type="file" class="form-control border shadow" /> *@
                            <input asp-for="@Model.ImageURL" hidden class="form-control border shadow" />
                            <label asp-for="@Model.ImageURL" hidden class="m-2"></label>
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Update
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right side: Image -->
                <div class="col-3">

                  <div class="card border-0">
                        <img src="@Model.ImageURL" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" class="card-img-top" alt="..." />
                   
                        <div class="card-body">
                            <h5 class="card-title">Image</h5>
                            <p class="card-text">Upload a new image if needed.</p>
                            <input asp-for="@Model.Image" type="file" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>



</div>


@section Scripts {

	@{
		<partial name="_ValidationScriptsPartial" />
	}

}